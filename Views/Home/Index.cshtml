@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/Content/home.css" />

</head>
<body>
    <div class="container-fluid">
        <div style="text-align: center; margin-top:5%">
            <h1>House of beers</h1>
        </div>
    </div>

    <div id="carousel" class="carousel slide" style="width: 50%; height: 50%; margin: 0 auto" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/bere.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/bere1.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/bere2.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="audio" style="align-items: center; justify-content: center; display: flex; margin-top:5%;">
        <audio controls>
            <source src="~/audio-video/Beer.mp3" type="audio/mpeg">
        </audio>
    </div>

    <div class="video" style="align-items: center; justify-content: center; display: flex; margin-top:5%;">
        <video style="width:500px; height:500px;" controls="controls">
            <source src="~/audio-video/beer.mp4" type="video/mp4">
        </video>
    </div>

</body>

